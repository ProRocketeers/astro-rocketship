---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Rocketship">
    <main class="container">
        <div class="stars"></div>
        <div class="content">
            <div class="rocket">
                <span class="rocket-icon">ðŸš€</span>
            </div>
            <h1>Welcome to <span class="gradient">Rocketship</span></h1>
            <p class="tagline">Your deployment is flying through rock8 cloud !</p>
            <div class="status">
                <span class="dot"></span>
                <span>Systems Up and Running</span>
            </div>
        </div>
    </main>
</Layout>

<style>
    .container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #0f0f23 0%, #1a1a3e 50%, #0f0f23 100%);
        position: relative;
        overflow: hidden;
    }

    .stars {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image:
            radial-gradient(2px 2px at 20px 30px, #fff, transparent),
            radial-gradient(2px 2px at 40px 70px, rgba(255,255,255,0.8), transparent),
            radial-gradient(1px 1px at 90px 40px, #fff, transparent),
            radial-gradient(2px 2px at 160px 120px, rgba(255,255,255,0.9), transparent),
            radial-gradient(1px 1px at 230px 80px, #fff, transparent),
            radial-gradient(2px 2px at 300px 150px, rgba(255,255,255,0.7), transparent),
            radial-gradient(1px 1px at 350px 200px, #fff, transparent),
            radial-gradient(2px 2px at 420px 60px, rgba(255,255,255,0.8), transparent),
            radial-gradient(1px 1px at 500px 180px, #fff, transparent),
            radial-gradient(2px 2px at 580px 100px, rgba(255,255,255,0.9), transparent);
        background-repeat: repeat;
        background-size: 600px 300px;
        animation: twinkle 4s ease-in-out infinite;
    }

    @keyframes twinkle {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.7; }
    }

    .content {
        text-align: center;
        z-index: 1;
        padding: 2rem;
    }

    .rocket {
        margin-bottom: 1.5rem;
        animation: float 3s ease-in-out infinite;
    }

    .rocket-icon {
        font-size: 5rem;
        display: inline-block;
        filter: drop-shadow(0 0 20px rgba(255, 107, 107, 0.5));
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
    }

    h1 {
        font-family: system-ui, -apple-system, sans-serif;
        font-size: clamp(2.5rem, 8vw, 4rem);
        font-weight: 800;
        color: #fff;
        margin: 0 0 1rem 0;
        letter-spacing: -0.02em;
    }

    .gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .tagline {
        font-family: system-ui, -apple-system, sans-serif;
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.7);
        margin: 0 0 2rem 0;
        font-weight: 400;
    }

    .status {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(255, 255, 255, 0.1);
        padding: 0.75rem 1.5rem;
        border-radius: 999px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #4ade80;
        font-family: system-ui, -apple-system, sans-serif;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .dot {
        width: 8px;
        height: 8px;
        background: #4ade80;
        border-radius: 50%;
        animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 1;
            box-shadow: 0 0 0 0 rgba(74, 222, 128, 0.4);
        }
        50% {
            opacity: 0.8;
            box-shadow: 0 0 0 8px rgba(74, 222, 128, 0);
        }
    }
</style>
